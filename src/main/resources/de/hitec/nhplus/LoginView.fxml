<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.hitec.nhplus.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10.0" alignment="CENTER" layoutX="100.0" layoutY="80.0" prefWidth="400.0" prefHeight="240.0">
        <Label text="Benutzername:"/>
        <TextField fx:id="usernameField" promptText="Benutzername eingeben"/>
        <Label text="Passwort:"/>
        <PasswordField fx:id="passwordField" promptText="Passwort eingeben"/>
        <Button text="Login" onAction="#handleLogin"/>
    </VBox>

</AnchorPane>
